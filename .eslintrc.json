{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [2, "unix"],
    "no-mixed-spaces-and-tabs": 2,
    "indent": ["error", 2],
    "curly": 2,
    "spaced-comment": 2
  }
}
