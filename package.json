{
  "name": "django-svelte-start",
  "version": "0.0.1",
  "description": "Django + Svelte starting template.",
  "main": "frontend/index.js",
  "scripts": {
    "build": "NODE_ENV=development webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:watch": "NODE_ENV=development webpack --watch",
    "lint": "eslint frontend/src webpack.config.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mondeja/django-svelte-start.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mondeja/django-svelte-start/issues"
  },
  "homepage": "https://github.com/mondeja/django-svelte-start#readme",
  "devDependencies": {
    "css-loader": "^5.0.2",
    "eslint": "^7.20.0",
    "eslint-config-mourner": "^3.0.0",
    "mini-css-extract-plugin": "^1.3.8",
    "svelte": "^3.32.3",
    "svelte-loader": "^3.0.0",
    "webpack": "^5.24.0",
    "webpack-cli": "^4.5.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": "mourner",
    "rules": {
      "linebreak-style": [
        2,
        "unix"
      ],
      "no-mixed-spaces-and-tabs": 2,
      "indent": [
        "error",
        2
      ],
      "curly": 2,
      "spaced-comment": 2
    }
  }
}
